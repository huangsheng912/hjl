.sights-detail .sight-info {
  padding-bottom: 40rpx;
  margin-bottom: 20rpx;
}
.sights-detail .fw {
  margin-top: 10rpx;
}
.sights-detail .desc {
  line-height: 50rpx;
}
.sights-detail .sight-img {
  width: 100%;
  height: 280rpx;
  margin: 10rpx 0;
  border-radius: 10rpx;
}
.sights-detail .sight-comment .fw {
  padding: 20rpx 30rpx;
}
.sights-detail .sight-comment .fw.border-bt-1px:after {
  left: 30rpx;
  right: 30rpx;
}
.sights-detail .sight-comment sight-item .border-bt-1px:after {
  height: 0;
}
.sights-detail .sight-comment preview-img .preview-wrap {
  width: 215rpx;
  height: 215rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.sights-detail .sight-comment preview-img:nth-of-type(3n) .preview-wrap {
  margin-right: 0;
}
.sights-detail .sight-comment operate-button .operate-btn-wrap button {
  line-height: 98rpx;
  color: #8e939c !important;
  font-size: 24rpx;
}
.sights-detail .sight-comment operate-button .operate-btn-wrap button text {
  margin-right: 15rpx;
}
.sights-detail .comment-bottom {
  overflow: hidden;
  color: #8f949a;
}
.sights-detail .comment-bottom .icon-heart-fill {
  color: f66b6f;
  margin: 0 10rpx 0 40rpx;
}
.sights-detail .punch {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-color: #fff;
  color: #71e1e8;
  -webkit-box-shadow: 0 0 10rpx #8f949a;
          box-shadow: 0 0 10rpx #8f949a;
  font-size: 24rpx;
}
.sights-detail .punch .icon-pinglun {
  color: #25d5e0;
  font-size: 36rpx;
  line-height: 1;
}

